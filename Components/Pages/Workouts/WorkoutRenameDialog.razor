@using FitTrack.Data
@using FitTrack.Data.DTOs.Routines
@using FitTrack.Data.DTOs.Workouts
@using FitTrack.Services.Routines
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@inject IRoutineService RoutineService

<MudDialog>
    <TitleContent>
        @MudDialog.Title
    </TitleContent>
    <DialogContent>
        <MudForm @ref="@form" @bind-IsValid="@success">
            <MudFocusTrap>
                <MudTextField @bind-Value="NewWorkout" AutoFocus="true" Label="Name" Required="true" Variant="Variant.Outlined" RequiredError="A name is required for a new Workout." />
            </MudFocusTrap>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Secondary" OnClick="() => MudDialog.Cancel()" Variant="Variant.Text">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="OK" Variant="Variant.Filled">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public required BaseWorkoutDto updateWorkout { get; set; }

    private string NewWorkout { get; set; } = "";
    private MudForm form = null!;
    private bool success;

    private void OK() => MudDialog.Close(DialogResult.Ok(NewWorkout));


    protected override void OnParametersSet()
    {
        NewWorkout = updateWorkout.Name;

        base.OnParametersSet();
    }
}
